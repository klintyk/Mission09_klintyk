@{
}

@model IQueryable<Book>

<h1> This is Exclusive Book's Online Store </h1>

<!--loop to get all results displayed-->
@foreach (Book b in Model)
{
    <h3>@b.Title</h3>
    <ul>
        <li> Author: @b.Author</li>
        <li>Publisher: @b.Publisher</li>
        <li>ISBN: @b.Isbn</li>
        <li> Classification: @b.Classification</li>
        <li> Category: @b.Category</li>
        <li> Page Count: @b.PageCount</li>
        <li>Price: $@b.Price</li>
    </ul>
}

<a asp-action="Index" asp-route-page_num="1">1</a>
<a asp-action="Index" asp-route-page_num="2">2</a>
<a asp-action="Index" asp-route-page_num="3">3</a>
